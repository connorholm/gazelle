<% if user_signed_in? %>
    <%= stylesheet_link_tag "searchbox.css" %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
    <div class="text-bg-secondary">
        <div class="py-6 row justify-content-center search-box-image">
            <div class="col-12 col-md-10 col-lg-8">
                <%= form_tag(home_index_path, method: "get", class:"card card-sm") do %>
                    <div class="card-body row no-gutters align-items-center">
                        <div class="col-auto">
                            <i class="fas fa-search h4 text-body"></i>
                        </div>
                        <div class="col">
                            <%= text_field_tag(:city, "", class:"form-control form-control-lg form-control-borderless", placeholder:"Enter City")  %>                            
                        </div>
                        <div class="col-auto">
                            <%= submit_tag "Search", :name => nil, class: "btn btn-lg btn-primary" %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
    <br/>
    <div class="container d-flex justify-content-center">
        <% if @data != nil %>
            <div class="card" style="width: 18rem;">
                <%= image_tag "http://openweathermap.org/img/w/#{@data["weather"][0]["icon"]}.png", class:"card-img-top" %>
            <div class="card-body">
                <h5 class="card-title"><%= @data["name"] %>: <%= @data["main"]['temp'] %>Â° Fahrenheit</h5>
                <p class="card-text"><%= @data["weather"][0]["description"] %></p>
            </div>
        <% end %>
</div>
    </div>
<% else %>
<h1>Sign In</h1>
<p>Search bar only avalible when signed in</p>
<% end %>
